<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.PrincipalController">
   <children>
      <BorderPane layoutY="-5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <HBox>
                     <children>
                        <Label text="Tamanho do vetor">
                           <font>
                              <Font name="Georgia" size="18.0" />
                           </font>
                           <HBox.margin>
                              <Insets bottom="5.0" left="10.0" right="10.0" top="20.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="txtTamanho" prefHeight="25.0" prefWidth="50.0">
                           <HBox.margin>
                              <Insets bottom="5.0" left="10.0" right="10.0" top="20.0" />
                           </HBox.margin>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#instanciar" prefHeight="41.0" prefWidth="66.0" style="-fx-background-color: green; -fx-background-radius: 25; -fx-border-color: black; -fx-border-radius: 25;" text="OK">
                           <font>
                              <Font size="18.0" />
                           </font>
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Label text="Incluir Nº">
                           <font>
                              <Font name="Georgia" size="18.0" />
                           </font>
                           <HBox.margin>
                              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="txtNumero" prefHeight="25.0" prefWidth="150.0">
                           <HBox.margin>
                              <Insets left="5.0" />
                           </HBox.margin></TextField>
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Label text="Na posição">
                           <HBox.margin>
                              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Georgia" size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtPosicao" prefHeight="25.0" prefWidth="150.0">
                           <HBox.margin>
                              <Insets top="5.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#inserir" prefHeight="41.0" prefWidth="66.0" style="-fx-background-color: green; -fx-background-radius: 25; -fx-border-color: black; -fx-border-radius: 25;" text="OK">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
